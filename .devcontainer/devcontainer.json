{
  "name": "Playwright Python Codespace",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {}
  },
  "postCreateCommand": "pip install playwright pytest && playwright install --with-deps",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-playwright.playwright"
      ]
    }
  }
}
